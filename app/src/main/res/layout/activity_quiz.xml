<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_quiz"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="1dp"
	android:paddingRight="1dp"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.example.tushar.primepatrol.QuizActivity"
	android:background="@color/colorAppBackground">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="15sp"
		android:textColor="#505050"
		android:id="@+id/greetingTextView"
		android:paddingLeft="10dp"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="30sp"
		android:id="@+id/questionTextView"
		android:paddingTop="70dp"
		android:paddingLeft="10dp"
		android:textColor="#ffffff"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="50dp">
	<Button
		android:id="@+id/button_yes"
		android:textSize="20sp"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:theme="@style/Button.Yes"
		android:text="@string/btn_submit_yes"
		android:onClick="checkResult"
		android:tag="1"
		/>
	<Button
		android:id="@+id/button_no"
		android:textSize="20sp"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:theme="@style/Button.No"
		android:text="@string/btn_submit_no"
		android:onClick="checkResult"
		android:tag="0"/>
	<Button
		android:id="@+id/button_next"
		android:textSize="20sp"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:theme="@style/Button.Next"
		android:text="@string/btn_next"
		android:onClick="nextQuestion" />
	</LinearLayout>

</LinearLayout>
